<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/AddedPopUp"
    android:background="@android:drawable/screen_background_light_transparent">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:background="#ffff">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/snapchat_snapcode"
            android:id="@+id/ivAddedUserImage"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tvAddedUser"
            android:layout_below="@+id/ivAddedUserImage"
            android:layout_centerHorizontal="true"
            android:text="aaa"
            android:textSize="15dp"
            android:gravity="center" />
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@id/tvAddedUser"
            android:layout_centerHorizontal="true"
            android:text="Add Friend"
            android:background="#9a32cd"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:id="@+id/btAdded"/>

    </RelativeLayout>

</RelativeLayout>