<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/storyFrame"
    android:background="#ffffff">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toolbar4" >

        </android.support.v7.widget.Toolbar>

        <TextView
            android:text="Stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="14dp"
            android:textSize="25sp"
            android:textColor="@android:color/holo_purple"
            android:id="@+id/storiesTitleView" />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/toolbar4"
            android:iconifiedByDefault="true"
            android:id="@+id/searchView"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/globe"
            android:layout_alignBottom="@+id/toolbar4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageButton1"
            android:backgroundTint="@color/zxing_transparent"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar4">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true" android:id="@+id/horscroll">

                    <LinearLayout android:layout_height="150dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="150dp"
                                android:background="@drawable/world"
                                android:padding="0dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="108dp"
                                android:paddingTop="0dp"
                                android:paddingRight="0dp"
                                android:paddingLeft="1dp"
                                android:id="@+id/imageView01"
                                android:layout_gravity="bottom"
                                android:contentDescription="@string/dummy_button"
                                android:layout_height="150dp"
                                android:layout_weight="1" />

                            <TextView
                                android:text="World"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/worldText"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="150dp"
                                android:background="@drawable/travel"
                                android:padding="0dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="108dp"
                                android:paddingTop="0dp"
                                android:paddingRight="0dp"
                                android:paddingLeft="1dp"
                                android:layout_gravity="bottom"
                                android:id="@+id/imageView02"
                                android:layout_height="150dp"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:textSize="20dp"
                                android:text="Travel"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/travelText"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="150dp"
                                android:background="@drawable/sport"
                                android:padding="0dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="108dp"
                                android:paddingTop="0dp"
                                android:paddingRight="0dp"
                                android:paddingLeft="1dp"
                                android:id="@+id/imageView03"
                                android:layout_gravity="bottom"
                                android:adjustViewBounds="true"
                                android:layout_height="150dp"
                                android:layout_marginLeft="1dp" />

                            <TextView
                                android:text="Sport"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/SportText"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="150dp"
                                android:background="@drawable/lifestyle"
                                android:padding="0dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="108dp"
                                android:paddingTop="0dp"
                                android:paddingRight="0dp"
                                android:paddingLeft="1dp"
                                android:id="@+id/imageView04"
                                android:layout_height="150dp"
                                android:layout_marginLeft="1dp" />

                            <TextView
                                android:text="lifeStyle"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/lifeStyleText"
                                android:layout_marginLeft="20dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="150dp"
                                android:background="@drawable/finance"
                                android:padding="0dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="108dp"
                                android:paddingTop="0dp"
                                android:paddingRight="0dp"
                                android:paddingLeft="1dp"
                                android:id="@+id/imageView05"
                                android:layout_height="150dp"
                                android:layout_marginLeft="1dp" />

                            <TextView
                                android:text="Finance"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/financeText"
                                android:layout_marginLeft="35dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="150dp"
                                android:background="@drawable/entertainment"
                                android:padding="0dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="108dp"
                                android:paddingTop="0dp"
                                android:paddingRight="0dp"
                                android:paddingLeft="1dp"
                                android:id="@+id/imageView06"
                                android:layout_height="150dp"
                                android:layout_marginLeft="1dp" />

                            <TextView
                                android:text="Entertainent"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/entertainentText"
                                android:layout_marginLeft="6dp" />
                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:text="Live"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_purple"
                    android:id="@+id/livetext"
                    android:layout_below="@+id/horscroll"
                    android:layout_height="20dp"
                    android:gravity="center_vertical|center_horizontal|center" />

                <RelativeLayout android:layout_height="105dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/livetext"
                    android:id="@+id/rlMyStory">

                    <TextView
                        android:text="----------My Stories----------"
                        android:layout_width="match_parent"
                        android:textSize="10sp"
                        android:textColor="@android:color/holo_purple"
                        android:id="@+id/mystriestext"
                        android:layout_height="20dp"
                        android:gravity="center_vertical|center_horizontal|center" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listMystories"
                        android:layout_below="@id/mystriestext">

                    </ListView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/rlMyStory"
                    >

                    <TextView
                        android:text="----------Friends Stories----------"
                        android:layout_width="match_parent"
                        android:textSize="10sp"
                        android:textColor="@android:color/holo_purple"
                        android:id="@+id/friendsstriestext"
                        android:layout_height="20dp"
                        android:gravity="center_vertical|center_horizontal|center" />

                </RelativeLayout>


            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/rlStoryBottom">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/cameraShift"
                android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ibTo"
                android:background="@drawable/bluron"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cameraShift"
                android:layout_toEndOf="@+id/cameraShift"
                android:backgroundTint="@android:color/holo_orange_light" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listFriendstories"
                android:layout_below="@+id/friendsstriestext"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="75dp"
                android:layout_marginEnd="75dp"
                android:layout_marginTop="53dp">

            </ListView>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/chatShift"
                android:background="@drawable/message"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cameraShift"
                android:layout_toStartOf="@+id/cameraShift" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>